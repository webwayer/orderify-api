{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "jsRules": {},
    "rules": {
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-snake-case",
                "allow-pascal-case",
                "require-const-for-all-caps"
            ]
        },
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "no-return-await": false,
        "max-line-length": [
            true,
            {
                "limit": 180,
                "ignore-pattern": "^import {(.*?)}",
                "check-strings": true,
                "check-regex": true
            }
        ]
    },
    "rulesDirectory": []
}